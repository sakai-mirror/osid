<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<extend>../../master/project.xml</extend>
	<name>sakai-osid-pack</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-osid-pack</id>
	<currentVersion>${sakai.version}</currentVersion>
	<organization>
		<name>Sakai Project</name>
		<url>http://www.sakaiproject.org/</url>
	</organization>
	<inceptionYear>2005</inceptionYear>

	<properties>
		<!-- deploy as a components -->
		<deploy.type>components</deploy.type>
	</properties>

	<dependencies>

		<!-- We host the OSID API to shared -->
		<dependency>
			<groupId>OKI</groupId>
			<artifactId>OkiOSID</artifactId>
			<version>2.0</version>
			<properties>
				<!-- deploy dependency jar to "shared", "common" or "server": use <war.bundle>true</war.bundle> to include in war -->
				<deploy.target>shared</deploy.target>
			</properties>
		</dependency>

		<!-- Our jar of api implemenntations -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-osid-impl</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-component</artifactId>
			<version>${sakai.version}</version>
		</dependency>

        <dependency>
            <groupId>OKI</groupId>
            <artifactId>okiRegistry</artifactId>
            <version>2005-10-19</version>
            <properties>
            	<war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>OKI</groupId>
            <artifactId>okiSearchAdjusters</artifactId>
            <version>2005-10-19</version>
            <properties>
            	<war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xerces</artifactId>
            <version>2.4.0</version>
            <properties>
            	<war.bundle>true</war.bundle>
            </properties>
        </dependency>

	</dependencies>

	<build>

		<sourceDirectory>src/java</sourceDirectory>

	</build>

</project>
